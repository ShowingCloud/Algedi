// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// COMMERCE SCHEMA (The Abstract Core)
// Owned by apps/commerce-core. Syncs with Medusa.
// ============================================================================

model Tenant {
  id               String   @id @default(uuid()) @db.Uuid
  stripeConnectId  String?   @map("stripe_connect_id") @db.VarChar(255)
  subscriptionTier String    @default("free") @map("subscription_tier") @db.VarChar(50)
  createdAt        DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  products         Product[]
  tenantCustomers  TenantCustomer[]
  siteConfigs      SiteConfig[]
  pageTemplates    PageTemplate[]
  promptLogs       PromptLog[]

  @@map("tenants")
  @@index([subscriptionTier])
}

model Product {
  id             String   @id @default(uuid()) @db.Uuid
  tenantId       String   @map("tenant_id") @db.Uuid
  attributes     Json?    @db.JsonB
  inventoryCount Int      @default(0) @map("inventory_count")
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("products")
  @@index([tenantId])
}

model Customer {
  id            String   @id @default(uuid()) @db.Uuid
  email         String   @unique @db.VarChar(255)
  globalConsent Boolean  @default(false) @map("global_consent")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  tenantCustomers TenantCustomer[]

  @@map("customers")
  @@index([email])
}

model TenantCustomer {
  tenantId       String   @map("tenant_id") @db.Uuid
  customerId    String   @map("customer_id") @db.Uuid
  marketingOptIn Boolean @default(false) @map("marketing_opt_in")
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@id([tenantId, customerId])
  @@map("tenant_customers")
  @@index([tenantId])
  @@index([customerId])
}

// ============================================================================
// CMS SCHEMA (The Presentation Layer)
// Owned by apps/cms. Controls how data looks.
// ============================================================================

model SiteConfig {
  tenantId    String  @id @map("tenant_id") @db.Uuid
  domain      String  @db.VarChar(255)
  themeTokens Json?  @map("theme_tokens") @db.JsonB
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("site_configs")
  @@index([domain])
}

model PageTemplate {
  id           String   @id @default(uuid()) @db.Uuid
  tenantId     String   @map("tenant_id") @db.Uuid
  structureJson Json?  @map("structure_json") @db.JsonB
  isPublished  Boolean  @default(false) @map("is_published")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("page_templates")
  @@index([tenantId])
  @@index([isPublished])
}

// ============================================================================
// EDITOR SCHEMA (The AI Memory)
// Owned by packages/ai-editor. Stores the "work in progress".
// ============================================================================

model AssetDescription {
  imageHash     String   @id @map("image_hash") @db.VarChar(255)
  aiDescription String?  @map("ai_description") @db.Text
  embedding     Unsupported("vector")?
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("asset_descriptions")
  @@index([imageHash])
}

model PromptLog {
  id           String   @id @default(uuid()) @db.Uuid
  tenantId     String   @map("tenant_id") @db.Uuid
  promptText   String   @map("prompt_text") @db.Text
  generatedCode String? @map("generated_code") @db.Text
  tokensUsed   Int      @map("tokens_used")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("prompt_logs")
  @@index([tenantId])
  @@index([createdAt])
}


